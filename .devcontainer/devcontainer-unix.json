{
  "name": "gen3-kro-dev (Linux/macOS)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces",
  "mounts": [
    "source=${localEnv:HOME}/.kube,target=/home/vscode/.kube,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached"
  ],
  "remoteUser": "vscode",
  "containerEnv": {
    "KUBECONFIG": "/home/vscode/.kube/config"
  },
  "postCreateCommand": "bash -c 'sudo chown -R vscode:vscode /workspaces && git config --global --add safe.directory /workspaces && mkdir -p /workspaces/outputs/logs && mkdir -p /workspaces/outputs/argo && echo \"Dev container setup complete!\" && if [[ -f /workspaces/bootstrap/scripts/connect-cluster.sh ]]; then if command -v aws >/dev/null 2>&1 && [[ -n \"${AWS_PROFILE:-}\" || -f /home/vscode/.aws/credentials ]]; then echo \"Running connect-cluster.sh (will be skipped if prerequisites are missing)...\" && bash /workspaces/bootstrap/scripts/connect-cluster.sh staging || true; else echo \"AWS CLI or credentials not found; skipping connect-cluster.sh.\"; fi fi'",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.exclude": {
          "**/.terraform": true,
          "**/.terragrunt-cache": true,
          "**/node_modules": true
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "[yaml]": {
          "editor.defaultFormatter": "redhat.vscode-yaml"
        },
        "[terraform]": {
          "editor.defaultFormatter": "hashicorp.terraform"
        }
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "hashicorp.terraform",
        "redhat.vscode-yaml",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "eamodio.gitlens",
        "ms-vscode.makefile-tools"
      ]
    }
  },
  "runArgs": [
    "--network=host"
  ],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "moby": false
    }
  }
}
