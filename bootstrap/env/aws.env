#!/usr/bin/env bash
###################################################################################################################################################
export HUB_PROFILE="${HUB_PROFILE:-boadeyem_tf}"
export SPOKE_PROFILE="${SPOKE_PROFILE:-boadeyem_tf}"
export HUB_AWS_REGION="${HUB_AWS_REGION:-us-east-1}"
export SPOKE_AWS_REGION="${SPOKE_AWS_REGION:-us-east-1}"
#-------------------------------------------------------------------------------------------------------------------------------------------------#
HUB_ACCOUNT_ID=$(aws sts get-caller-identity --output text --query Account --profile "$HUB_PROFILE")      # Account ID of the management cluster
SPOKE_ACCOUNT_ID=$(aws sts get-caller-identity --output text --query Account --profile "$SPOKE_PROFILE")  # Account ID of the spoke cluster
#-------------------------------------------------------------------------------------------------------------------------------------------------#
export HUB_ACCOUNT_ID
export SPOKE_ACCOUNT_ID
###################################################################################################################################################